{
  "name": "react-codemirror2",
  "version": "3.0.0",
  "description": "a tiny react codemirror component wrapper",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "prestart": "npm run webpack",
    "start": "node docs/server.js",
    "prewebpack": "npm run transpile",
    "webpack": "webpack --display-error-details --config docs/webpack.config.js",
    "transpile": "tsc",
    "pretest": "npm run transpile",
    "prepublish": "npm run transpile && npm run test && npm run webpack",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "setupFiles": [
      "@nteract/mockument",
      "raf/polyfill"
    ],
    "testRegex": "./test/index.spec.tsx",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scniro/react-codemirror2.git"
  },
  "author": "scniro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scniro/react-codemirror2/issues"
  },
  "homepage": "https://github.com/scniro/react-codemirror2#readme",
  "keywords": [
    "react",
    "react-codemirror",
    "codemirror",
    "editor",
    "syntax",
    "ide",
    "code"
  ],
  "peerDependencies": {
    "react": ">=15.5 <=16.x",
    "codemirror": "5.x"
  },
  "devDependencies": {
    "@nteract/mockument": "1.0.4",
    "@types/codemirror": "0.0.49",
    "@types/jest": "21.1.3",
    "@types/react": "16.0.13",
    "babel-core": "6.26.0",
    "babel-jest": "21.2.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "codemirror": "5.30.0",
    "coveralls": "3.0.0",
    "css-loader": "0.28.7",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "1.0.2",
    "express": "4.16.2",
    "jest": "21.2.1",
    "js-beautify": "1.7.4",
    "node-sass": "4.5.3",
    "open": "0.0.5",
    "prismjs": "1.8.1",
    "raf": "3.4.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "5.0.6",
    "react-test-renderer": "16.0.0",
    "redux": "3.7.2",
    "sass-loader": "6.0.6",
    "sinon": "4.0.1",
    "style-loader": "0.19.0",
    "ts-jest": "21.1.2",
    "typescript": "2.5.3",
    "webpack": "3.8.0"
  }
}
